<div class="container">
  <div class="background"></div>
  <h1><%= @hike.name %></h1>

  <img src="<%= @hike.image %>" alt="Hike Picture" class="hike-pic">

  <div class="list">
    <h3>Quick Info</h3>
    <ul>
      <li><%= @hike.length %> miles RT</li>
      <li><%= @hike.elevation_gain %> ft. elevation gain</li>
      <li><%= @hike.highest_point %> ft. highest point</li>
      <li>Parking Pass:<%= @hike.parking_pass %></li>
    </ul>
  </div>
  <% if !@current_user.nil? %>
    <%= link_to "Save Hike to my backpack", new_hike_trip_path(params[:id]), class: "btn btn-default" %>
  <% end %>

  <h3>Description</h3>
    <p>
      <%= @hike.description %>
    </p>

  <%= link_to "Back to All Hikes", hikes_path, class: "btn btn-default" %>

</div>
